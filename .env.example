# Database Configuration
POSTGRES_USER=mtcloud
POSTGRES_PASSWORD=changeme_secure_password
POSTGRES_DB=mtcloud_db

# Application Settings
SECRET_KEY=your-super-secret-key-min-32-chars
ENVIRONMENT=development  # development, staging, production

# API URLs (for frontend)
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# AI Provider API Keys
# Get keys from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Get keys from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Get keys from: https://console.x.ai/
XAI_API_KEY=

# Self-hosted LLM endpoint (optional)
# Example: http://localhost:11434/v1 for Ollama
LOCAL_LLM_URL=

# Email Configuration (for alerts and reports)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@mtcloud.local

# Application Configuration
MAX_DEVICES_PER_ORG=100
POLLING_INTERVAL_SECONDS=60
AI_ANALYSIS_CRON=0 8 * * *  # Daily at 8 AM

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:80
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
